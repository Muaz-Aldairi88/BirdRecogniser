@{
    ViewData["Title"] = "Result";
    var probability0 = float.Parse(ViewData["Probability0"].ToString().TrimEnd('%')) / 100;
}
<div class="col-md-12 p-0">
        <div class="result-banner-content position-relative">
            <img src="~/image/ResultBg.jpg" class="banner-image" alt="banner">
            <div class="banner-text position-absolute top-50 start-50 translate-middle text-center">
            <h1>The result of recognition</h1>
            <div class="row g-inf">
                <img class="predict-image position-relative" src="@ViewData["CroppedImageDataUrl"]" alt="Cropped Image" />
                <div class="g-inf-content">
                    <p class="p-1">Possible bird species: @ViewData["Prediction0"]</p>
                    <p>Probability: @ViewData["Probability0"]</p>
                    <p>General Information: @ViewData["GeneralInf0"]</p>

                    @if (probability0 < 0.8)
                    {
                        <p class="p-1">Possible bird species: @ViewData["Prediction1"]</p>
                        <p>Probability: @ViewData["Probability1"]</p>
                        <p>General Information: @ViewData["GeneralInf1"]</p>
                    
                        <p class="p-1">Predicted label is: @ViewData["Prediction2"]</p>
                        <p>Probability: @ViewData["Probability2"]</p>
                        <p>General Information: @ViewData["GeneralInf2"]</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>