
@*@model IndexModel*@
@{
    ViewData["Title"] = "Recognise Demo Page";
}
<style>
    #headerDiv {
        color: blue;
        text-align: center;
    }

</style>

<div id="headerDiv"><h2>TensorFlow Image Classification</h2></div>
<br />
<div>
    <form method="post" asp-action="ClassifyImage" enctype="multipart/form-data">
        <div>
            <p>Upload a file image using this form to predict its label:</p>
        </div>
        <div>
            <input type="file" name="imageFile">
        </div>
        <div>
            <br />
            <input type="submit" value="Upload File" name="submit">
        </div>

    </form>
</div>
<br />
<br />

<div id="divPrediction" class="col-md-10"></div>
<div id="divProbability" class="col-md-10"></div>

<script src="~/js/upload.js"></script>

<br />
<br />
<br />

