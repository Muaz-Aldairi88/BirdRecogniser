@model BirdRecogniser02.Models.Submission

@{
    ViewData["Title"] = "Delete the Submission";
}
<h1 class="text-center">Are you sure you want to delete this?</h1>
@*<h4>Submission</h4>*@
<hr />
<div class="DeleteSubmission position-relative d-flex justify-content-center">
    <div class="m-3 text-center">

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BirdName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BirdName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BirdInformation)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BirdInformation)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FileName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FileName)
                        </dd>
                        <dt class="col-sm-4">
                            Uploaded Image:
                        </dt>
                        <dd class="col-sm-8">
                            <img decoding="async" src="@("~/photos/"+Model.FileName)" asp-append-version="true" width="250px" height="250px" />
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
            <form asp-action="Delete">
                <div class="row d-flex justify-content-center">
                    <input type="hidden" asp-for="SubmissionId"/>
                    <input type="submit" value="Delete" class="btn fileInput-button2 m-1" />
                    <input type="button" value="Back to List" class="btn fileInput-button m-1" onclick="location.href='@Url.Action("Index")'" />
                </div>
            </form>



    </div>
</div>
